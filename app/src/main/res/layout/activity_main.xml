<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_app"
    android:longClickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView android:id="@+id/face_recognition"
            android:text="@string/face_recognition"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:text="Choose Directory"
            android:id="@+id/btnChooseDir"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:ellipsize="end"
            android:background="#5e75ff"
            android:layout_alignBaseline="@+id/btnResultado"
            android:layout_alignBottom="@+id/btnResultado"
            android:layout_alignStart="@+id/face_recognition"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:text="Load Plan"
            android:id="@+id/btnLoad"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:ellipsize="end"
            android:background="#5e75ff"
            android:layout_alignBaseline="@+id/btnResultado"
            android:layout_alignBottom="@+id/btnResultado"
            android:layout_alignStart="@+id/face_recognition"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:text="generate Result"
            android:id="@+id/btnResultado"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:ellipsize="end"
            android:background="#5e75ff"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/face_recognition"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

</RelativeLayout>
